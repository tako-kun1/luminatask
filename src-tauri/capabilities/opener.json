{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "opener-capability",
    "description": "Opener permissions for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "opener:default",
        {
            "identifier": "opener:allow-open-path",
            "allow": [
                {
                    "path": "**"
                },
                {
                    "path": "$HOME/**"
                },
                {
                    "path": "$DOWNLOADS/**"
                },
                {
                    "path": "$DESKTOP/**"
                },
                {
                    "path": "$DOCUMENTS/**"
                },
                {
                    "path": "C:/**"
                },
                {
                    "path": "D:/**"
                }
            ]
        }
    ]
}